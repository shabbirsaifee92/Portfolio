.container.portfolio-container
  .row
    .col-md-7{ class: 'portfolio-show' }
      - if @portfolio_item.main_image.attached?
        = image_tag @portfolio_item.main_image
      - else
        = image_tag 'main_img_placeholder.jpg'
    .col-md-5
      %h2= @portfolio_item.title

      %p
        = @portfolio_item.subtitle
      %p
        = @portfolio_item.body
      %h2 Technologies Used

      - @portfolio_item.technologies.each do |t|
        %p= t.name

      %p
        = link_to "Edit", edit_portfolio_path(@portfolio_item) if logged_in? :site_admin


