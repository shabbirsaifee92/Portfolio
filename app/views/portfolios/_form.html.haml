= form_for(portfolio_item) do |form|
  .row
    .col-md-6
      .form-group
        = form.label :title
        = form.text_field :title, id: :portfolio_title, class: 'form-control'
      .form-group
        = form.label :subtitle
        = form.text_field :subtitle, id: :portfolio_subtitle, class: 'form-control'
      .form-group
        = form.label :main_image
        = form.file_field :main_image, id: :portfolio_main_image, class: 'form-control', accept: 'image/png,image/gif,image/jpeg, image/gif'
      .form-group
        = form.label :thumb_image
        = form.file_field :thumb_image, id: :portfolio_thumb_image, class: 'form-control', accept: 'image/png,image/gif,image/jpeg, image/gif'
    .col-md-6
      .form-group
        = form.label :body
        = form.text_area :body, id: :portfolio_body, class: 'form-control', rows: 13

    .col-md-12
      %h2 Technologies used
      .form-group
        = form.fields_for :technologies do |technology_form|
          = technology_form.label :name
          = technology_form.text_field :name, class: 'form-control'

      .form-group
        = form.submit 'Save Portfolio Item', class: 'btn btn-primary btn-block'
