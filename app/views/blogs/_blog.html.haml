.blog-post
  %h2.blog-post-title
    = link_to blog.title.capitalize, blog_path(blog)
  %p.blog-post-meta
    = "Published #{distance_of_time_in_words(blog.created_at, Time.zone.now)} ago"
  - if logged_in? :site_admin
    %p.blog-post-meta
      - if blog.published?
        = link_to 'Unpublish', toggle_status_blog_path(blog), method: :post, data: {confirm: "Are you sure you?"}
      - else
        = link_to 'Publish', toggle_status_blog_path(blog), method: :post, data: {confirm: "Are you sure you?"}
      |
      = link_to 'Edit', edit_blog_path(blog)
      |
      = link_to 'Destroy', blog, method: :delete, data: { confirm: 'Are you sure?' }
  %p= blog.body